<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DataHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DataHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContents" aria-controls="navbarSupportedContents"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContents">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownCatalog" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Catalog
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownCatalog">
                                <h6 class="dropdown-header">Courses & Learning Paths</h6>
                                @await Component.InvokeAsync("CoursesDropdown")
                                <a class="dropdown-item" href="#">Career & Skill Tracks</a>
                                <a class="dropdown-item" href="#">Technologies</a>
                                <a class="dropdown-item" href="#">Popular Topics</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownResources" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Resources
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownResources">
                                <h6 class="dropdown-header">Data Engineer</h6>
                                <a class="dropdown-item" href="#">Course Materials</a>
                                <a class="dropdown-item" href="#">Cheat Sheet</a>
                                <h6 class="dropdown-header">Data Analysis</h6>
                                <a class="dropdown-item" href="#">Course Materials</a>
                                <a class="dropdown-item" href="#">Cheat Sheet</a>
                                <h6 class="dropdown-header">Data Science</h6>
                                <a class="dropdown-item" href="#">Course Materials</a>
                                <a class="dropdown-item" href="#">Cheat Sheet</a>
                                <h6 class="dropdown-header">Technologies</h6>
                                <a class="dropdown-item" href="#">Python</a>
                                <a class="dropdown-item" href="#">R</a>
                                <a class="dropdown-item" href="#">Excel</a>
                                <a class="dropdown-item" href="#">SQL</a>
                                <a class="dropdown-item" href="#">Power BI</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Courses" asp-action="Index">Pricing</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-area="" asp-controller="Users" asp-action="SignOut" method="post">
                                    <button type="submit" class="btn btn-link nav-link">Sign out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="SignIn">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Register">Get Started</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DataHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>